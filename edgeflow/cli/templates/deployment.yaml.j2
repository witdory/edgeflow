apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ name | replace('_', '-') }}
  labels:
    app: {{ name }}
    edgeflow.io/node-type: "{{ node_type | default('generic') }}"
spec:
  replicas: {{ replicas | default(1) }}
  selector:
    matchLabels:
      app: {{ name }}
  template:
    metadata:
      labels:
        app: {{ name }}
    spec:
      containers:
        - name: main
          image: {{ image }}
          {# Per-node image: run node module directly #}
          command: ["python", "-m", "edgeflow.run", "{{ node_module }}"]
          imagePullPolicy: Always
          env:
            - name: PYTHONUNBUFFERED
              value: "1"
            {# 환경변수 동적 주입 #}
            {% if env_vars %}
            {% for key, value in env_vars.items() %}
            - name: {{ key }}
              value: "{{ value }}"
            {% endfor %}
            {% endif %}
          
          {# GPU/Camera: Privileged mode #}
          {% if device in ['camera', 'gpu', 'lidar'] %}
          securityContext:
            privileged: true
          {% endif %}

      {# Node Selector #}
      nodeSelector:
      {% if is_gateway %}
        edgeflow.io/role: infra
      {% elif device %}
        edgeflow.io/device: {{ device }}
      {% endif %}